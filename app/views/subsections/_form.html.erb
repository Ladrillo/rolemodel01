<div class='container'>
	<%= form_for([@section, @subsection]) do |f| %>

		<%= @subsection.errors.full_messages.to_sentence %>

		<p>
			<%= f.label :heading %><br/>	
			<%= f.text_field :heading, autofocus: true %>
		</p>

		<p>
			<%= f.label :content %><br/>	
			<%= f.text_area :content, :cols => "60", :rows => "10" %>
		</p>

		<p>
			<%= f.label :image_file_name %><br/>	
			<%= f.text_field :image_file_name, size: 30, placeholder: "GIF, JPG or PNG filename" %>
		</p>

		<p>
						
		</p>

	<% end %>
</div>